mixin pictureChb(imgName, txt, addClasses='')
	+b.LABEL.pic-chb(class=addClasses)
		input(type='checkbox' class="invisible")&attributes(attributes)
		span.item
			span.img-box
				img(loading="lazy" src=`img/@2x/${imgName}` alt="")
				span.ball
				span.ball.ball--checked
			.text-center
				span.txt=txt

mixin ballChb(number, txt, addClasses='')
	+b.LABEL.pic-chb--ball(class=addClasses)
		input(type='checkbox' class="invisible")&attributes(attributes)
		span.item
			span.img-box
				span.number=number
				span.ball
				span.ball.ball--checked
			.text-center
				if block
					span.txt.txt--long
						block
				else
					span.txt.txt--long=txt


mixin quizeStep(txt, addClasses='', bootClasses='')
	.col-md(class=bootClasses)
		+e.step(class=addClasses)=txt

mixin quizeCard(title, addClasses, rowAlt=true)
	+e.card(class=addClasses)
		.text-center
			+e.title=title
		+e.content
			block
		if rowAlt
			+e.f-row.row
				.col-sm
					+e.hard-btn(href="#") Затрудняюсь с выбором
				.col-sm-auto
					+e.forward-btn(href="#") Следующий шаг
		else
			+e.f-row.row
				+e.f-col.col-sm
					+e.back-btn(href="#") вернуться назад
				+e.f-col.col-sm-auto
					+e.forward-btn(href="#") Следующий шаг