mixin pictureChb(imgName, txt, addClasses='')
	+b.LABEL.pic-chb(class=addClasses)
		input.q-radio-choise-js(type='radio' class="invisible" value=txt)&attributes(attributes)
		span.item
			span.img-box
				img(loading="lazy" src=`img/@2x/${imgName}` alt="")
				span.ball
				span.ball.ball--checked
			span.text-center.d-block
				span.txt=txt

mixin ballChb(number, txt, addClasses='')
	+b.LABEL.pic-chb--ball(class=addClasses)
		input.q-radio-choise-js(type='radio' class="invisible" value=txt)&attributes(attributes)
		span.item
			span.img-box
				span.number=number
				span.ball
				span.ball.ball--checked
			.text-center
				if block
					span.txt.txt--long
						block
				else
					span.txt.txt--long=txt


mixin quizeStep(txt, addClasses='')
	.swiper-slide.quize-step-slide-js
		+e.step.quize-step-btn-js(class=addClasses)=txt

mixin quizeCard(title, addClasses, radioName)
	+e.card-wrap.quize-card-wrap-js(class=addClasses)
		+e.card&attributes(attributes)
			.text-center
				+e.title=title
			+e.content
				block
			+e.f-row.row
				.col-sm
					+e.LABEL.hard-label
						input.q-radio-choise-js(type="radio" class="invisible" value='Затрудняюсь с выбором' name=radioName)
						.hard-btn Затрудняюсь с выбором
				.col-sm-auto
					+e.forward-btn.forward-btn-js(type="button") Следующий шаг
				//-+e.f-row.row
					+e.f-col.col-sm
						+e.back-btn(href="#") вернуться назад
					+e.f-col.col-sm-auto
						+e.forward-btn(href="#") Следующий шаг